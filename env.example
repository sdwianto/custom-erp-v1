# Enterprise ERP Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Database Configuration (Required for production)
DATABASE_URL="postgresql://username:password@localhost:5432/nextgen_erp"

# Application Environment
NODE_ENV="development" # development | production | test
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Security (Required for production)
NEXTAUTH_SECRET="your-super-secure-secret-here-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Performance Monitoring (Optional)
# ANALYZE=true # Uncomment to enable bundle analyzer

# Logging (Production recommended)
# LOG_LEVEL="info" # error | warn | info | debug

# Enterprise Features (Optional)
# ENABLE_AUDIT_LOGS=true
# ENABLE_RATE_LIMITING=true
# ENABLE_ADVANCED_SECURITY=true

# Email Configuration (Optional)
# SMTP_HOST="your-smtp-server.com"
# SMTP_PORT=587
# SMTP_USER="your-email@company.com"
# SMTP_PASSWORD="your-smtp-password"

# File Storage (Optional)
# STORAGE_PROVIDER="local" # local | s3 | gcs
# AWS_ACCESS_KEY_ID="your-aws-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret"
# AWS_REGION="us-east-1"
# AWS_BUCKET_NAME="your-bucket-name"
